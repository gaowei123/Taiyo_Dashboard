
@{
    ViewBag.Title = "PackingInventory";
}

@*下拉框组件*@
<script src="~/Plugins/bootstrap-select-1.13.0/dist/js/bootstrap-select.min.js"></script>
<link href="~/Plugins/bootstrap-select-1.13.0/dist/css/bootstrap-select.min.css" rel="stylesheet" />


<style>
    .container-fluid {
        max-width: 1400px;
    }
</style>


<div class="container-fluid">

    <div class="row titleRow">
        <img class="titleImg" src="~/Resources/Images/headericon.gif" />
        <span class="titleText">PQC Packing Inventory</span>
    </div>


    <div class="row">
        <div class="col-md-12 panel panel-default searchingPanel">
            <div class="row form-inline searchingBar ">
                <div class="col-md-3">
                    <label style="width:35%">Part No:</label>
                    <select id="ddlPartNo" class="form-control selectpicker" data-live-search="true" data-ng-style="btn-info"></select>
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-3"></div>
                <div class="col-md-3" align="right" style="padding-right:2%;">
                    <input type="button" class="btn btn-success" value="Generate" onclick="Search();" />
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-lg-12" style="padding:0px;">
            <table id="tablePackingInventory" data-toggle="table"></table>
        </div>
    </div>


</div>




<script src="~/plugins/bootstrap-table-1.15.3/dist/bootstrap-table.min.js"></script>
<link href="~/plugins/bootstrap-table-1.15.3/dist/bootstrap-table.min.css" rel="stylesheet" />

<script type="text/javascript">

    var apiGetPackInventory = window.globalConfig.rootDirectory + '/PQC_Product/GetWIPInventory';





    //设置part no, machine id 下拉框
    $(document).ready(function () {
        $('#ddlPartNo').selectpicker({ width: 'calc(60%)' });
        setPartNoDDL($('#ddlPartNo'), 'PQC','');

        Search();
    });





    function Search() {


        //重新加载必须将原本table清空
        $('#tablePackingInventory').bootstrapTable('destroy');

        $('#tablePackingInventory').bootstrapTable({ // 对应table标签的id


            //call后台数据
            method: 'post',
            dataType: 'json',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            url: apiGetPackInventory,

            cache: false, // 设置为 false 禁用 AJAX 数据缓存， 默认为true

            //sidePagination: 'server', // 设置为服务器端分页
            queryParams: function (params) {
                return {
                    PartNo: $("#txtPartNo").val()
                }
            },
            //sortName: 'id', // 要排序的字段
            //sortOrder: 'desc', // 排序规则


            //表头样式 undefined, thead-light, thead-dark,
            theadClasses: 'thead-title',

            //表格样式
            classes: 'table table-bordered table-hover table-striped',


            striped: false,  //表格显示条纹，默认为false
            pagination: false, // 在表格底部显示分页组件，默认false
            //pageList: [10, 20], // 设置页面可以显示的数据条数
            //pageSize: 10, // 页面数据条数
            //pageNumber: 1, // 首页页码


            rowStyle: function (row, index) {
                return {
                    //防止数据自动换行
                    css: { "overflow": "hidden", "text-overflow": "ellipsis", "white-space": "nowrap" }
                }
            },

            columns: [
            {
                field: 'customer',
                title: 'Customer',
                align: 'left',
                valign: 'middle'
            },
            {
                field: 'model',
                title: 'Model',
                align: 'left',
                valign: 'middle'
            },
            {
                field: 'partNo',
                title: 'Part No',
                align: 'left',
                valign: 'middle'
            },
            {
                field: 'jobNo',
                title: 'Job No',
                align: 'left',
                valign: 'middle',
                formatter:function(value, row, index){
                    return '<a href="JobOrderDetail?PartNo=' + row.partNo + '" target="_blank"  >' + value + '</a>';
                }
            },
            {
                field: 'sMrpQty',
                title: 'MRP Qty',
                align: 'center',
                valign: 'middle'
            },
            {
                field: 'sBeforeQty',
                title: 'Before Qty',
                align: 'center',
                valign: 'middle'
            },
            {
                field: 'sAfterQty',
                title: 'After Qty',
                align: 'center',
                valign: 'middle'
            },
            {
                field: 'jobCount',
                title: 'Job Count',
                align: 'center',
                valign: 'middle'
            },
            {
                field: 'mfgDate',
                title: 'MFG Date',
                align: 'center',
                valign: 'middle',
                formatter: function (value, row, index) {
                    if (value != "" && value != null) {
                        var date = new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10));

                        return dateFormat('dd/MM/yyyy', date);
                    } else {
                        return "";
                    }
                }
            },
            {
                field: 'bomFlag',
                title: 'Bom List',
                align: 'center',
                valign: 'middle'
            }
            ],

            onLoadSuccess: function (data) {  //加载成功时执行


                var totalMrpSET = 0;
                var totalMrpPCS = 0;
                var totalAfterSET = 0;
                var totalAfterPCS = 0;
                var totalBeforeSET = 0;
                var totalBeforePCS = 0;
                var totalJobCount = 0;



                data.forEach(function (val, index) {
                    //console.log(val);

                    totalMrpSET += val.mrpQtySET;
                    totalMrpPCS += val.mrpQtyPCS;
                    totalAfterSET += val.afterQtySET;
                    totalAfterPCS += val.afterQtyPCS;
                    totalBeforeSET += val.beforeQtySET;
                    totalBeforePCS += val.beforeQtyPCS;
                    totalJobCount += val.jobCount;
                });



                var count = $('#tableWIPInventory').bootstrapTable('getData').length;
          
                $('#tableWIPInventory').bootstrapTable('insertRow', {
                    index: count,
                    row: {
                        customer: "Total",
                        model: "",
                        partNo: "",
                        jobNo: "",
                        sMrpQty: totalMrpSET + "(" + totalMrpPCS + ")",
                        sBeforeQty: totalBeforeSET + "(" + totalBeforePCS + ")",
                        sAfterQty: totalAfterSET + "(" + totalAfterPCS + ")",
                        jobCount: totalJobCount,
                        mfgDate: "",
                        bomFlag: ""
                    }
                });
            },
            onLoadError: function () {  //加载失败时执行
                console.log("加载数据失败");
            }

        });

    }


    $(window).resize(function () {
        $('#tablePackingInventory').bootstrapTable('resetView');
    });



</script>