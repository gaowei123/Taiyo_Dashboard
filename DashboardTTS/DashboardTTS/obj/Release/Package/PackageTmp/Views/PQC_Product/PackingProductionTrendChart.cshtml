
@{
    ViewBag.Title = "PackingProductionTrendChart";
}

@*下拉框组件*@
<script src="~/Plugins/bootstrap-select-1.13.0/dist/js/bootstrap-select.min.js"></script>
<link href="~/Plugins/bootstrap-select-1.13.0/dist/css/bootstrap-select.min.css" rel="stylesheet" />

@*时间框组件*@
<script src="~/Plugins/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"></script>
<link href="~/Plugins/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />



<div class="container">
    <div class="row titleRow">
        <img class="titleImg" src="~/Resources/Images/headericon.gif" />
        <span class="titleText">Packing Production Trend Chart</span>
    </div>


    <div class="row searchingBar">

        <div class="col-md-12 panel panel-default searchingPanel" style="padding-top:10px;">

            <div class="row form-inline searchingBar ">
                <div class="col-md-3">
                    <label style="width:35%">Summary By:</label>
                    <select id="ddlGroupBy" class="form-control selectpicker" data-ng-style="btn-info">
                        <option value="Day">Day</option>
                        <option value="Month">Month</option>
                        <option value="Year">Year</option>
                    </select>
                </div>
                <div class="col-md-3" id="divDateFrom">
                    <label style="width:35%">Date From:</label>
                    <input type="text" class="form-control" id="txtDateFrom" CssClass="form-control formDateTimePicker" data-date-format="yyyy-mm-dd" placeholder="Please choose date" style="width:60%;" />
                </div>
                <div class="col-md-3" id="divDateTo">
                    <label style="width:35%">Date To:</label>
                    <input type="text" class="form-control" id="txtDateTo" CssClass="form-control formDateTimePicker" data-date-format="yyyy-mm-dd" placeholder="Please choose date" style="width:60%;" />
                </div>
                <div class="col-md-3">
                    <label for="ddlType" style="width:35%">Type:</label>
                    <select id="ddlType" class="form-control selectpicker" data-ng-style="btn-info">
                        <option value="">All</option>
                        <option value="Online">Online</option>
                        <option value="Offline">Offline</option>
                    </select>
                </div>
            </div>

            <div class="row form-inline searchingBar ">
                <div class="col-md-3">
                    <label for="ddlPartNo" style="width:35%">Part No:</label>
                    <select id="ddlPartNo" class="form-control selectpicker" data-live-search="true" data-ng-style="btn-info"></select>
                </div>
                <div class="col-md-3">
                    <label for="ddlStation" style="width:35%;">Station:</label>
                    <select id="ddlStation" class="form-control selectpicker" data-ng-style="btn-info">
                        <option value="">All</option>
                        <optgroup label="Online">
                            <option value="1">Online1(Sta1)</option>
                            <option value="2">Online2(Sta2)</option>
                            <option value="3">Online3(Sta3)</option>
                            <option value="4">Online4(Sta4)</option>
                            <option value="5">Online5(Sta5)</option>
                            <option value="6">Online6(Sta6)</option>
                            <option value="7">Online7(Sta7)</option>
                            <option value="8">Online8(Sta8)</option>
                        </optgroup>
                        <optgroup label="WIP">
                            <option value="16">WIP1(Sta16)</option>
                            <option value="17">WIP2(Sta17)</option>
                            <option value="14">WIP3(Sta14)</option>
                            <option value="15">WIP4(Sta15)</option>
                            <option value="11">WIP5(Sta11)</option>
                            <option value="13">WIP6(Sta13)</option>
                        </optgroup>
                        <optgroup label="Packing">
                            <option value="25">Packing1(Sta25)</option>
                            <option value="23">Packing2(Sta23)</option>
                            <option value="22">Packing3(Sta22)</option>
                            <option value="21">Packing4(Sta21)</option>
                            <option value="24">Packing5(Sta24)</option>
                            <option value="12">Packing6(Sta12)</option>
                        </optgroup>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="ddlPIC" style="width:35%">PIC:</label>
                    <select id="ddlPIC" class="form-control selectpicker" data-ng-style="btn-info"></select>
                </div>
                <div class="col-md-3" align="right" style="padding-right:2%;">
                    <input type="button" class="btn btn-success" value="Generate" onclick="search();" />
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12" style="padding:0px; margin-top:10px;">
            <div id="chartProduction" style="height:700px;"></div>
        </div>
    </div>


</div>




<script src="~/plugins/bootstrap-table-1.15.3/dist/bootstrap-table.min.js"></script>
<link href="~/plugins/bootstrap-table-1.15.3/dist/bootstrap-table.min.css" rel="stylesheet" />


<script src="~/Dashboard CSS JS/JS/LASER_MachineSetting.js"></script>
<script src="~/plugins/incubator-echarts-master/dist/echarts.min.js"></script>


<script type="text/javascript">


    var apiGetProductList = window.globalConfig.rootDirectory + '/PQC_Product/GetProductTrendList';


    //初始化时间框
    $('#txtDateFrom').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        initialDate: new Date()
    });
    $('#txtDateTo').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        initialDate: new Date()
    });

    $('#ddlGroupBy').selectpicker({ width: 'calc(60%)' });
    $('#ddlPIC').selectpicker({ width: 'calc(60%)' });
    $('#ddlStation').selectpicker({ width: 'calc(60%)' });
    $('#ddlPartNo').selectpicker({ width: 'calc(60%)' });
    $('#ddlType').selectpicker({ width: 'calc(60%)' });


    //初始化 echart
    var chart = echarts.init(document.getElementById('chartProduction'));


    $(document).ready(function () {

        setUserIDDDL($('#ddlPIC'), 'PQC');
        setPartNoDDL($('#ddlPartNo'), 'PQC', '');




        var today = dateFormat('yyyy-MM-dd', new Date());


        var dateTime = new Date();
        var datefrom = dateTime.setDate(dateTime.getDate() - 30);
        datefrom = new Date(datefrom);
        datefrom = dateFormat('yyyy-MM-dd', datefrom);


        $('#txtDateFrom').val(datefrom);
        $('#txtDateTo').val(today);


        search();
    });


    $('#ddlGroupBy').change(function () {
        var selectedValue = $(this).children('option:selected').val();

        

       
      
        var strHtml_DateFrom = '<label style="width:35%">Date From:</label>\
                    <input type="text" class="form-control" id="txtDateFrom" CssClass="form-control formDateTimePicker" data-date-format="yyyy-mm-dd" placeholder="Please choose date" style="width:60%;" />';
        var strHtml_DateTo = '<label style="width:35%">Date To:</label>\
                    <input type="text" class="form-control" id="txtDateTo" CssClass="form-control formDateTimePicker" data-date-format="yyyy-mm-dd" placeholder="Please choose date" style="width:60%;" />';
        var strHtml_ddlYear = '<label style="width:35%">Year:</label>\
                    <select id="ddlYear" class="form-control selectpicker" data-ng-style="btn-info"></select>';



        $('#divDateFrom').html('');
        $('#divDateTo').html('');
      
        

        if (selectedValue == 'Day') {
            $('#divDateFrom').html(strHtml_DateFrom);
            $('#divDateTo').html(strHtml_DateTo);

            $('#txtDateFrom').datetimepicker({
                weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                initialDate: new Date()
            });
            $('#txtDateTo').datetimepicker({
                weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                initialDate: new Date()
            });

        } else if (selectedValue == 'Month') {
            $('#divDateFrom').html(strHtml_ddlYear);

            var today = new Date();

            $('#ddlYear').selectpicker({ width: 'calc(60%)' });

            setYearDDL($('#ddlYear'), today.getFullYear());
        } else {

        }




    })



    function search() {

        

        $.ajax({
            type: "POST",
            dataType: "json",
            url: apiGetProductList,
            data: {
                GroupBy: $('#ddlGroupBy').val(),
                Year: $('#ddlYear').val(),
                DateFrom: $("#txtDateFrom").val(),
                DateTo: $("#txtDateTo").val(),
                Type: $('#ddlType').val(),
                PartNo: $("#ddlPartNo").val(),
                Station: $("#ddlStation").val(),
                PIC: $('#ddlPIC').val()
            },

            beforeSend: function () {
                chart.showLoading();
            },

            success: function (data) {

                if (data == "") {
                    alert("No data searched, please try gagin!");
                }

                var axisXLabelData = [];
                var outputData = [];


                //超过15天, x轴标签转 -60
                var axisXLabelRotate = 0;
                if ($('#ddlGroupBy').val() == 'Day' && data .length> 15) {
                    axisXLabelRotate = -60;
                }




                for (var i = 0; i < data.length; i++) {
                    if ($('#ddlGroupBy').val() == 'Day') {
                        axisXLabelData.push(data[i].month +'-'+data[i].day);
                    } else if ($('#ddlGroupBy').val() == 'Month') {
                        axisXLabelData.push(data[i].month);
                    } else {
                        axisXLabelData.push(data[i].year);
                    }

                  
                    outputData.push(data[i].output);
                }


                var option = {
                    color: ['#00B050'],

                    title: {
                        text: 'Packing Production Trend Chart'
                    },

                    legend: {
                        data: [$('#ddlGroupBy').val()]
                    },

                    tooltip: {
                        show: true,
                        //trigger: 'axis',
                        //crossStyle: {
                        //    color: '#999'
                        //}
                    },

                    xAxis: {
                        type: 'category',
                        name: $('#ddlGroupBy').val(),
                        data: axisXLabelData,//X轴数据 数组
                        axisLabel: {
                            interval: 0,
                            rotate: axisXLabelRotate   //X轴 倾斜角度
                        },
                        axisPointer: {
                            type: 'shadow'
                        }
                    },

                    yAxis: [
                        {
                            type: 'value',
                            name: 'Output',
                            min: 0,
                            //max: 100,
                            //interval: 20,
                            //axisLabel: {
                            //    formatter: '{value} %'
                            //}
                        }
                    ],

                    series: [
                        {
                            name: 'Output',
                            type: 'bar',
                            data: outputData,
                            label: {
                                show: true,
                                position: 'insideTop'
                            },
                        }
                    ]
                };

                chart.hideLoading();
                chart.clear();
                chart.setOption(option);

            },
            error: function (e) {
                alert("Get chart data error !");
            }
        });



        //点击事件
        //chart.on('click', function (params) {
        //    console.log(params); 
        //    var name = params.name;
        //});


    }







    $(window).resize(function () {
        chart.resize();
    });


</script>
