
@{
    ViewBag.Title = "Mc Setting Analysis";
}





@*下拉框组件*@
<script src="~/Plugins/bootstrap-select-1.13.0/dist/js/bootstrap-select.min.js"></script>
<link href="~/Plugins/bootstrap-select-1.13.0/dist/css/bootstrap-select.min.css" rel="stylesheet" />


@*时间框组件*@
<script src="~/Plugins/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"></script>
<link href="~/Plugins/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />



<div class="container">



    <div class="row titleRow">
        <img class="titleImg" src="~/Resources/Images/headericon.gif" />
        <span class="titleText">Product Parameter Chart</span>
    </div>




    <div class="row searchingBar">

        <div class="col-md-12 panel panel-default searchingPanel" style="padding-top:10px;">

            <form class="form-inline" role="form">
                <div class="form-group searchingBarCol">
                    <label for="txtDateFrom">Date From:</label>
                    <input type="text" class="form-control" id="txtDateFrom" CssClass="form-control formDateTimePicker" data-date-format="yyyy-mm-dd" placeholder="Please choose date" />
                </div>
                <div class="form-group searchingBarCol">
                    <label for="txtDateTo">Date To:</label>
                    <input type="text" class="form-control" id="txtDateTo" CssClass="form-control formDateTimePicker" data-date-format="yyyy-mm-dd" placeholder="Please choose date" />
                </div>
                <div class="form-group searchingBarCol">
                    <label for="ddlPartNo">Part No:</label>
                    <select id="ddlPartNo" class="form-control selectpicker " multiple data-live-search="true" data-ng-style="btn-info"></select>
                </div>
                <div class="form-group searchingBarCol">
                    <label for="ddlMachineID">Machine ID:</label>
                    <select id="ddlMachineID" class="form-control selectpicker" multiple data-live-search="true" data-ng-style="btn-info"></select>
                </div>
                
                <div class="form-group searchingBarCol">
                    <input type="button" class="btn btn-success" value="Generate" onclick="generateChart();" />
                </div>
            </form>
        </div>
    </div>



    <div class="row panel panel-default">
        <div class="col-lg-12">
            <div id="chartRate" style="width:100%; height:300px;"></div>
        </div>
    </div>

    <div class="row panel panel-default">
        <div class="col-lg-12">
            <div id="chartFrequency" style="width:100%;height:300px;"></div>
        </div>
    </div>
    <div class="row panel panel-default">
        <div class="col-lg-12">
            <div id="chartPower" style="width:100%;height:300px;"></div>
        </div>
    </div>


</div> 

<script src="~/Dashboard CSS JS/JS/LASER_MachineSetting.js"></script>
<script src="~/plugins/incubator-echarts-master/dist/echarts.min.js"></script>

<script type="text/javascript">

    //设置part no, machine id 下拉框
    $(document).ready(function () {
        setMachineDDL($('#ddlMachineID'), 8);
        setPartNoDDL($('#ddlPartNo'), 'Laser','');
    });

    //初始化时间框
    $('#txtDateFrom').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        initialDate: new Date()
    });
    $('#txtDateTo').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        initialDate: new Date()
    });


    //初始化echart
    var chartRate = echarts.init(document.getElementById('chartRate'));
    var chartFrequency = echarts.init(document.getElementById('chartFrequency'));
    var chartPower = echarts.init(document.getElementById('chartPower'));



</script>