    function updateQty() {
              
        //将所有input 添加到datas对象中.
        var datas = {
            TrackingID: $('#lbTrackingID').text(),
            JobNo: $('#lbJobNo').text()
        };
        $("input").each(function () {
            var id = $(this).attr("id");
            var value = $(this).val();

            datas[id] = value;
        });


        $.ajax({
            type: "POST",
            dataType: "json",
            url: apiUpdateQty,
            data: datas,

            beforeSend: function () {
                $('#divLoading').show();
            },

            success: function (data) {
                if (data == true) {
                    let jobNo = getUrlParam('JobID');                
                    let date = $('#lbDay').text().replace('/', '-');

                    window.location.replace(`./CheckingLiveReport?JobNo=${jobNo}&Date=${date}`);
                } else {
                    alert('Update Fail');
                }


                $("#modalLogin").modal('hide');
            },

            complete: function () {
                $('#divLoading').hide();
            },

            error: function () {
                $('#divLoading').hide();
                alert("Update Qty error !");
            }
        });
    }


    //material table 输入检测 是不是数字.
    function checkInputValue(object) {


        var reg = /^\+?[1-9][0-9]*$/;//正整数 


        var value = object.val();
        if (value == '')
            return;


        if (!reg.test(value)) {

            var oldValue = value.substring(0, value.length - 1);
            object.val(oldValue);

            alert('Must input number!');
        }
    }

