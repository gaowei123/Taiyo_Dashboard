    function initEndLogin() {


        if (!$('#radioComplete').is(":checked") && !$('#radioNotComplete').is(":checked")) {
            alert('Please choose job complete status!')         
        } else {
            $(".modal-footer").html('');

            var strHtml = '<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>\
                       <button type="button" class="btn btn-success" onclick="endloginSubmit();">Submit</button>';
            $(".modal-footer").html(strHtml);

            $("#modalLogin").modal('show');

            $('#txtUsername').focus();
        }

     
    }


    function endloginSubmit() {

      
        var username = $('#txtUsername').val();
        var password = $('#txtPassword').val();


        if (username == '') {
            alert("Please input username!");
            $('#txtUsername').val('');
            $('#txtUsername').focus();
            return false;
        }
        if (password == '') {
            alert("Please input password!");
            $('#txtPassword').val('');
            $('#txtPassword').focus();
            return false;
        }



        $.ajax({
            type: "POST",
            dataType: "json",
            url: apiLogin,
            data: {
                Username: username,
                Password: password,
                Department: 'PQC',
                Authority: 'Operator'
            },
            success: function (data) {

                //login fail   
                if (data != true) {
                    alert(data);
                    return false;
                }


                $('#txtUsername').val('');
                $('#txtPassword').val('');


                endJob();



            },
            error: function () {
                alert("a exception happend during login !");
            }
        });


    }


    function endJob() {

        var trackingID = $('#lbTrackingID').text();
        var complete = false;

        if ($('input[name="complete"]:checked').val() == 1) {
            complete = true;
        } else {
            complete = false;
        }

        $.ajax({
            type: "POST",
            dataType: "json",
            url: apiUpdateEndJobFlag,
            data: {
                TrackingID: trackingID,
                Complete:complete
            },
            success: function (data) {

                if (data ==  true) {
                    alert('End Job Sucess');
                } else {
                    alert('End Job Fail');
                }
             

                $("#modalLogin").modal('hide');
            },
            error: function () {
                alert("End job error !");
            }
        });
    }

    //============================= End Job =============================//
    









