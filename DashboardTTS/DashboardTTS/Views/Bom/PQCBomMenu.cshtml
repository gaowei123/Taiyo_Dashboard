<script> 

    var apiGetMaterialList = window.globalConfig.rootDirectory + '/Bom/GetPQCBomDetialList';


    //========== 处理process ==========//
    function generateProcess(process) {
        if ($('#txtProcess').val() === '')
            $('#txtProcess').val(process);
        else
            $('#txtProcess').val($('#txtProcess').val() + '-' + process);
    }
    $('#btnProcessBack').click(function () {
        if ($('#txtProcess').val() == '')
            return;

        var arrProcess = $('#txtProcess').val().split('-');
        if (arrProcess.length == 1) {
            $('#txtProcess').val('');
        } else {
            var newProcess = '';
            for (var i = 0; i < arrProcess.length-1; i++) {
                newProcess += (arrProcess[i] + '-');
            }
            newProcess = newProcess.substring(0, newProcess.length - 1);
        }

        $('#txtProcess').val(newProcess);
    })
    //========== 处理process ==========//



    
    $('#btnAddMaterial').click(function () {
        if ($('#txtPartNo').val() =='') {
            alert('Please input part no!');
            $('#txtPartNo').focus();
        } else {
            $('#txtPartNo').attr('disabled', 'disabled');
            $('#modalUpdateForm').modal('show');
        }
    })

    //去除part no的disable效果
    function resetPartNoEnable() {
        if ($('#tbMaterial')[0].children.length == 0) {
            $('#txtPartNo').removeAttr("disabled");
        } 
    }



    function setMaterialList(partNo) {
        $.ajax({
            type: "POST",
            dataType: "json",
            url: apiGetMaterialList,
            data: {
                PartNo: partNo
            },
            success: function (data) {
                if (data == undefined || data.length== 0) {
                    return;
                }

                $('#tbMaterial').html('');

                var strHtml;
                for (var i = 0; i < data.length; i++) {
                    strHtml += '<tr>\
                                    <td style="line-height:75px;">' + data[i].sn + '</td>\
                                    <td style="line-height:75px;">' + data[i].materialPartNo + '</td>\
                                    <td style="line-height:75px;">' + data[i].materialName + '</td>\
                                    <td style="line-height:75px;">' + data[i].module + '</td>\
                                    <td style="line-height:75px;">' + data[i].partCount + '</td>\
                                    <td style="line-height:75px;">' + data[i].outerBoxQty + '</td>\
                                    <td style="line-height:75px;">' + data[i].packingTrays + '</td>\
                                    <td style="line-height:75px;"><img src="' + data[i].imagePath + '" style="width:75px;height:75px;" /></td>\
                                    <td style="line-height:75px;">\
                                        <button class="btn btn-warning"  onclick="editMaterial(' + data[i].materialPartNo + ');">>Edit</button>\
                                        <button class="btn btn-danger" onclick="editMaterial(' + data[i].partNumber + ',' + data[i].materialPartNo + ');"><i class="fa fa-trash-o fa-lg"></i></button>\
                                    </td>\
                                </tr>';
                }
             
           
                $('#tbMaterial').html(strHtml);
            },

            error: function () {
                alert("Get material list error  !");
            }
        });
    }

    function editMaterial(materialNo) {
        $('#modalUpdateForm').modal('show');

        var trs = $('#tbMaterial')[0].children;

        for (var i = 0; i < trs.length; i++) {

            var value = trs[i].materialPartNo;

            if (value == materialNo){

                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);
                $('#txtSN').val(trs[i].sn);

                break;
            }

        }
       

    }

